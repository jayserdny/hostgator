                    @Html.DropDownListFor(x => x.StaffMember.Id, new SelectList(Model.StaffMembers, "Value", "Text"), " Select")
                    @Html.ValidationMessageFor(model => model.StaffMember.Id, "", new { @class = "text-danger" })
                </div>
