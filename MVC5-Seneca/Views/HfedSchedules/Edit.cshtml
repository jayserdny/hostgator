    $(document).ready(function () {
        $(document).on('change', '#location_Id', LoadClients() {
        });
    });
</script>*@

<script>
    $(function () {
        $("#clientsDDL").chosen({ width: "150px" });
    });
</script>    

<script type="text/javascript">
    $("#location_Id").change(LoadClients);
</script>
