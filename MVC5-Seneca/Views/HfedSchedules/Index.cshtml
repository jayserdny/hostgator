@using System.Web.Mvc.Html
@model IEnumerable<MVC5_Seneca.EntityModels.HfedSchedule>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/chosen.jquery.min.js"></script>
    <link href="~/Content/chosen.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/themes/base/jquery-ui.min.css" /> @*// for date-picker*@
    @*Put page javascript in a separate .js file where breaks can be set during debugging:*@
    <script src="@Url.Content("/Scripts/HfedFunctions.js")"></script>
    </head>
<body>
<h3>
    HFED Delivery Schedule
</h3> 
<table class="table">
    <tr>
        <td><strong>Starting Date </strong></td>
        <td>@Html.TextBox("Starting Date", @Session["StartDate"].ToString(), new { id = "StartDate", style = "width: 75px;" }) (Click to change)</td>
        <td><strong>  Ending Date </strong></td>
        <td>@Html.TextBox("Ending Date", @Session["EndDate"].ToString(), new { id = "EndDate", style = "width: 75px;" }) (Click to change)</td>
    </tr>
</table>
<p>
    @Html.ActionLink("Create New Delivery Schedule", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            Provider
        </th>
        <th>
            Drop Off
        </th>
        <th>
            Driver
        </th>
        <th>
            PickUp
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PointPerson)
        </th>
        <th>
            Clients
        </th>

        <th>
            @Html.DisplayNameFor(model => model.ScheduleNote)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Request)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Complete)
        </th>
        <th>
            Vol Hrs.
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Provider.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location.Name)
            </td>
            <td>
                @*Use ScheduleNote as dummy string for display-only DDL*@
                @*@Html.DropDownListFor(modelitem => item.ScheduleNote, item.SelectedHfedDrivers)*@   
                @if(item.HfedDrivers.Count > 0)  
                {
                    @Html.DisplayFor(modelitem => item.HfedDrivers[0].FirstName)
                 }
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.PickUpTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PointPerson.FirstName)
            </td>
            <td>
                @*Use ScheduleNote as dummy string for display-only DDL*@
                @Html.DropDownListFor(modelitem => item.ScheduleNote, item.SelectedHfedClients)
                @Html.DisplayFor(modelitem => item.ClientsTotal )
            </td>
            <td title=@item.NoteToolTip>
                @Html.DisplayFor(modelItem => item.ScheduleNote)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Request)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Complete)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VolunteerHours)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.Id})
            </td>
        </tr>
    }
</table>
<br/>
<br/>
<table>
    <tr>
        <td>
            @Html.ActionLink("Create Excel File", "CreateExcel")
        </td>
    </tr>
    @if (User.IsInRole("Administrator"))
    {      
        <tr>
            <td>
                @Html.ActionLink("Email Staff 2 Weeks Before Month - Request Schedules", "EmailStaffAsk")
            </td>
        </tr>
        <tr>
            <td>
                @Html.ActionLink("Email Schedule to All Drivers - Ask for Availability", "EmailDriversAsk")
            </td>
        </tr>
        <tr>
            <td>
                @Html.ActionLink("Email Schedule to All Drivers - Show Drivers", "EmailDriversShow")
            </td>
        </tr>
        <tr>
            <td>
                @Html.ActionLink("Email 2-day Reminder to All Scheduled Drivers & Staff for", "EmailReminder") @DateTime.Today.AddDays(2).ToLongDateString()
            </td>
        </tr>
    }
</table>

<br/>
<table>
    <tr>
        <td>
            @Html.ActionLink("Return to Dashboard", "ReturnToHfedDashboard", new {})
        </td>
    </tr>
</table>
</body>
</html>
 
<script>
    $(function () {
        $("#StartDate").datepicker(); 
    });
</script>
<script type="text/javascript">
    $("#StartDate").change(function () {
        UpdateHfedStartDate($('#StartDate').val());
        sessionStorage.setItem("StartDate", $('#StartDate').val());
    });                      
</script>
<script>
    $(function () {
        $("#EndDate").datepicker();
    });
</script>
<script type="text/javascript">
    $("#EndDate").change(function () {
        UpdateHfedEndDate($('#EndDate').val());
        sessionStorage.setItem("StartDate", $('#EndDate').val());
    });                      
</script>
